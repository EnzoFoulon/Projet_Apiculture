{# templates/apiculteur/ajouter_ruche.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Ajouter une ruche{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# Ajoutez ici le lien vers la feuille de style Bootstrap #}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <h1>Ajouter une ruche</h1>

                <form method="post" action="{{ path('ajouter_ruche') }}">
                    <div class="form-group">
                        <label for="nomRuche">Nom de la ruche</label>
                        <input type="text" class="form-control" id="nomRuche" name="nomRuche" required>
                    </div>

                    <!-- Ajoutez ici des champs pour la position de la ruche (GoogleMap ou formulaire traditionnel) -->

                    <button type="submit" class="btn btn-primary">Enregistrer la ruche</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Ajoutez ici d'autres scripts Bootstrap si nécessaire -->
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {# Ajoutez ici le lien vers les scripts Bootstrap et les scripts supplémentaires #}
