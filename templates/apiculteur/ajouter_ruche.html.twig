{# templates/apiculteur/ajouter_ruche.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Ajouter une ruche{% endblock %}

{% block body %}
    <h1>Ajouter une ruche</h1>

    <form method="post" action="{{ path('ajouter_ruche') }}">
        <div class="form-group">
            <label for="nomRuche">Nom de la ruche</label>
            <input type="text" class="form-control" id="nomRuche" name="nomRuche" required>
        </div>

        <!-- Ajoutez ici des champs pour la position de la ruche (GoogleMap ou formulaire traditionnel) -->

        <button type="submit" class="btn btn-primary">Enregistrer la ruche</button>
    </form>
{% endblock %}
