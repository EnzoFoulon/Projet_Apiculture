    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Ajoutez ici d'autres scripts personnalisés si nécessaire -->
    <script>
        // Ajoutez ici les scripts supplémentaires nécessaires
    </script>
{% endblock %}
